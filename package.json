{
  "name": "react-typescript-webpack",
  "version": "0.0.1",
  "author": "github.com/cosmos-lab",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode development --host 0.0.0.0",
    "dev": "rimraf ./build && webpack --mode development --watch",
    "prod": "rimraf ./build && webpack --mode production --watch",
    "build": "rimraf ./build && webpack --mode production",
    "lint": "eslint ./",
    "lint:fix": "eslint --fix ./",
    "prettier": "prettier ./",
    "prettier:fix": "prettier --write .",
    "test": "jest --bail ./unit",
    "test:watch": "jest --bail --watch ./unit",
    "test:coverage": "rimraf ./coverage && jest --coverage ./unit",
    "depcheck": "depcheck",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "if [ \"$NODE_ENV\" != \"production\" ]; then npx lint-staged; fi"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run test",
      "npm run lint:fix",
      "npm run prettier:fix",
      "git add ."
    ]
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.9.1",
    "eslint-plugin-import-v9": "^2.29.1-fork",
    "eslint-plugin-react": "^7.35.0",
    "eslint-webpack-plugin": "^4.2.0",
    "globals": "^15.9.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "terser-webpack-plugin": "^5.3.10",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "keywords": [
    "react",
    "typescript",
    "webpack",
    "jest",
    "eslint",
    "prettier",
    "husky"
  ]
}
