{
  "name": "react-webpack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --host 0.0.0.0",
    "dev": "npm run clean && webpack --mode development  --watch",
    "prod": "npm run clean && webpack --mode production  --watch",
    "build": "npm run clean && webpack --mode production",
    "lint": "eslint ./src/",
    "pretty": "prettier --write ./src/",
    "test": "jest --env=jsdom ./tests/unit",
    "test:e2e": "jest --testPathPattern=./tests/e2e/*",
    "lint-staged": "lint-staged",
    "prepare": "husky install && npx husky add .husky/pre-commit 'npm run lint-staged'",
    "clean": "rimraf ./build"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "jest --env=jsdom ./tests/unit --bail --watchAll=false --findRelatedTests --passWithNoTests ./tests/unit"
    ],
    "*.{ts,tsx,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "babel-jest": "^28.1.3",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.19.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "puppeteer": "^15.4.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "tsc-files": "^1.1.3",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
